@model IEnumerable<MvcEcocycle.Models.Movimentacoes>

@{
	ViewData["Title"] = "Index";
}

<h1>Movimentações</h1>

<p>
	<a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ColaboradoresId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Qtdmovimentada)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Data)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Usuario)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Colaboradores.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Qtdmovimentada)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Data)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Usuario.Email)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.MovimentacoesId">Editar</a> |
					<a asp-action="Details" asp-route-id="@item.MovimentacoesId">Detalhes</a> |
					<a asp-action="Delete" asp-route-id="@item.MovimentacoesId">Deletar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
