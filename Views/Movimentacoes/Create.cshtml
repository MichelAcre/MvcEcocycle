	@model MvcEcocycle.Models.Movimentacoes

@{
	ViewData["Title"] = "Create";
}

<h1>Clique aqui para criar</h1>

<h4>Movimentações</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ColaboradoresId" class="control-label"></label>
				<select asp-for="ColaboradoresId" class="form-control" asp-items="ViewBag.ColaboradoresId">
					<option>Selecione...</option>
				</select>
				<span asp-validation-for="ColaboradoresId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Qtdmovimentada" class="control-label"></label>
				<input asp-for="Qtdmovimentada" class="form-control" />
				<span asp-validation-for="Qtdmovimentada" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Data" class="control-label"></label>
				<input asp-for="Data" class="form-control" />
				<span asp-validation-for="Data" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Criar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
