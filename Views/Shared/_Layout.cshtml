<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Gestão - Ecocycle</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MvcEcocycle.styles.css" asp-append-version="true" />
</head>
<body style="color: #394D37; background-color: #DEF2FF;">
	<header class="">
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background: #0D6D4B;">
			<div class="container-fluid">
				<a class="navbar-brand" style="color: #EFF8D3" asp-area="" asp-controller="Home" asp-action="Index">Gestão - Ecocycle</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-light mx-2 btn btn-custom" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light mx-2 btn btn-custom" asp-area="" asp-controller="Colaboradores" asp-action="Index">Colaboradores</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light mx-2 btn btn-custom" asp-area="" asp-controller="Movimentacoes" asp-action="Index">Movimentações</a>
						</li>
						<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboards" asp-action="Index">Dashboard</a>
                        </li>
					</ul>
					<partial class="text-white" name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top border-success footer text-muted">
		<div class="container">
			&copy; 2025 - MvcEcocycle - <a asp-area="" asp-controller="Home" asp-action="Home" class="text-success">Início</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
