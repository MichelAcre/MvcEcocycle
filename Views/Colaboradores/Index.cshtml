@model IEnumerable<MvcEcocycle.Models.Colaboradores>

@{
	ViewData["Title"] = "Index";
}

<h1>Colaboradores</h1>

<p>
	<a asp-action="Create" class="btn btn-custom">Criar Novo</a>
</p>
<table class="table table-striped table-bordered table-hover table-info" style="background-color: #243b3f">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Qtd)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td class="Kgram">
					@Html.DisplayFor(modelItem => item.Qtd)
				</td>
				<td>
					<a asp-action="Edit" class="btn" style="background-color: #9EE5FF;" asp-route-id="@item.ColaboradoresId">Editar</a> |

					<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ColaboradoresId">Deletar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
